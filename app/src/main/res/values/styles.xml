<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="ButtonPadding" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:paddingBottom">8sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

</resources>
