<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:maxWidth="100dp"
        android:clickable="true"
        android:focusable="true"
        android:background="?attr/selectableItemBackground"
        android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/icon_user_view"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:text="Melekhov Dmitriy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_user_view"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@+id/icon_user_view"
            app:layout_constraintStart_toStartOf="@+id/icon_user_view"
            app:layout_constraintEnd_toEndOf="@+id/icon_user_view"
            android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>